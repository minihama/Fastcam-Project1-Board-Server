<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatios.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boardserver.boardserver.mapper.UserProfileMapper">
    <select id = "getUserProfile" resultType="com.boardserver.boardserver.dto.UserDTO">
        SELECT userId,userId,password,nickName,CreateTime,isWithDraw,status
        FROM user
        WHERE userId = #{id}
    </select>

    <insert id="insertUserProfile" parameterType="com.boardserver.boardserver.dto.UserDTO">
        INSERT INTO user (userId, password,nickName,isWithDraw,status,isAdmin)
        VALUES (#{userID},#{password},#{nickName},#{isWithDraw},#{status},#{isAdmin})
    </insert>

    <update id="updateUserProfile" parameterType="com.boardserver.boardserver.dto.UserDTO">
        UPDATE user
        SET password=#{password},nickName=#{nickName},isWithDraw=#{isWithDraw},status=#{status}
        WHERE id = #{id}
    </update>

    <delete id="deleteUserProfile">
        DELETE 
        FROM user
        WHERE userId = #{id}
    </delete>

    <select id="findByIdAndPassword" resultType="com.boardserver.boardserver.dto.UserDTO">
        SELECT id, userId, password, nickName, createTime,isWithDraw,status
        FROM user
        WHERE userId=#{id}
        AND password=#{password}
        AND status != 'DELETE'
    </select>

    <select id="idCheck" resultType="int">
        SELECT COUNT(id)
        FROM user
        WHERE userId=#{userId}
    </select>

    <update id="updatePassword" parameterType="com.boardserver.boardserver.dto.UserDTO">
        UPDATE user
        SET password = #{password}
        WHERE userId = #{userId}
    </update>


    <insert id="register">
        INSERT INTO user (userId,password,nickName,createTime,isWithDraw,status)
        VALUES (#{userId},#{password},#{nickName},#{createTime},#{isWithDraw},#{status})
    </insert>

</mapper>
